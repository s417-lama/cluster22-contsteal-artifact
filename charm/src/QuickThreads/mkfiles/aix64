CC=../../bin/charmc -I. -ma $(OPTS)

all: qt stp testpgm

qt: md/setjmp_d.h qt.c md/setjmp64.c
	rm -f qtmd.h
	ln -s md/setjmp_d.h qtmd.h
	$(CC) -c -o qt.o qt.c
	$(CC) -c -o qtmds.o md/setjmp64.c
	$(CC) -o libckqt.a qt.o qtmds.o
	$(CC) -shared -o libckqt.so qt.o qtmds.o

stp:
	$(CC) -c stp.c
	ar q libstp.a stp.o

testpgm:
	$(CC) -c meas.c
	$(CC) -c -o qtmdb.o md/setjmp_b.c
	$(CC) -o run meas.o qtmdb.o libstp.a libckqt.a
